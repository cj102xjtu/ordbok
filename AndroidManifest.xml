<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.googlecode.ordbok3"
    android:versionCode="60"
    android:versionName="6.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.googlecode.ordbok3.SuggestionProvider.permission.READ_PROVIDER" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" >
    </uses-sdk>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="MainWindow"
            android:label="@string/hello"
            android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".About"
            android:label="@string/about_title"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="WordDetailView"
            android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar" >
        </activity>

        <provider
            android:authorities="com.googlecode.ordbok3.SuggestionProvider"
            android:name="com.googlecode.ordbok3.suggestProvider.SearchWordSuggestProvider"
            android:readPermission="com.googlecode.ordbok3.SuggestionProvider.permission.READ_PROVIDER"            
            />
    </application>

</manifest>